<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/ly_linear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorPrimaryLight"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

    <LinearLayout
            android:id="@+id/ly_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="@dimen/frag_bill_item_vertical_padding"
            android:paddingBottom="@dimen/frag_bill_item_vertical_padding">

        <TextView
                android:id="@+id/frag_bill_item_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:text="date"
                android:textSize="@dimen/frag_bill_item_size"
                android:gravity="center_vertical|center_horizontal"/>

        <TextView
                android:id="@+id/frag_bill_item_description"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                tools:text="description"
                android:textSize="@dimen/frag_bill_item_size"
                android:gravity="center_vertical|center_horizontal"/>

        <TextView
                android:id="@+id/frag_bill_item_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:text="value"
                android:textSize="@dimen/frag_bill_item_size"
                android:gravity="center_vertical|center_horizontal"/>

        <ImageView
                android:id="@+id/frag_bill_item_payed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:textSize="18sp"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/check"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>